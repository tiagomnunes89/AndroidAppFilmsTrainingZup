<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.estagio.oletrainning.zup.otmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.home.movieDetailsActivity.MovieDetailsActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".ui.BaseActivity" />
        <activity
            android:name=".ui.home.homeActivity.HomeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_home" />
        <activity android:name=".ui.preLoginActivity.PreLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.registerUserActivity.RegisterNewUserActivity" />
        <activity android:name=".ui.tokenValidationActivity.TokenValidationActivity" />
        <activity android:name=".ui.incompleteRegistrationActivity.IncompleteRegistrationActivity" />
        <activity android:name=".ui.loginActivity.LoginActivity" />
        <activity android:name=".ui.recoverPasswordActivity.RecoverPasswordActivity" />
    </application>

</manifest>